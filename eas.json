{
  "cli": {
    "version": ">= 16.19.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk",
        "env": {
          "GOOGLE_SERVICES_JSON": "@GOOGLE_SERVICES_JSON"
        },
        "prebuildCommand": "node -e \"require('fs').writeFileSync('android/app/google-services.json', process.env.GOOGLE_SERVICES_JSON)\""
      }
      }
    },
  "hooks": {
    "pre-build": "node scripts/create-google-services.js"
},
  "submit": {
    "production": {}
  }
}
